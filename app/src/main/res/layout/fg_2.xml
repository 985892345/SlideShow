<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/test">

    <com.ndhzs.slideshow.SlideShow
        android:id="@+id/fg_2_slideShow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:indicators_style="zoom"
        app:indicators_outerGravity="top"
        app:indicators_wrapWidth="18dp"
        app:indicators_circleRadius="6dp"
        app:indicators_intervalMargin="30dp"
        app:indicators_circleColor="@android:color/holo_red_light"/>

</androidx.constraintlayout.widget.ConstraintLayout>